<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="logins"
            type="com.example.projectnew.Login" />
    </data>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/main"
            android:layout_width="441dp"
            android:layout_height="39dp"
            android:text="Main Page"
            android:visibility="visible" />

        <TextView
            android:id="@+id/ee"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Enter Email id"
            android:visibility="visible" />

        <EditText
            android:id="@+id/email"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:text="@={logins.email}"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:text="Enter Password"
            android:visibility="visible" />
        <EditText
            android:id="@+id/password"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:text="@={logins.password}"
            android:textSize="18sp" />

        <Button
            android:id="@+id/enter"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="30dp"
            android:text="Enter credential"
            android:textColorHighlight="#00C40E0E" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/sub"
            android:visibility="gone"
android:text="Test Page"
            />
        <TextView
            android:id="@+id/eec"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:text="Enter email id"
            android:visibility="gone" />
        <EditText

            android:id="@+id/emailcon"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:text="@={logins.emailcon}"
            android:textSize="18sp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/passc"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:text="Enter Password"
            android:visibility="gone" />
        <EditText
            android:id="@+id/passcon"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:text="@={logins.passcon}"
            android:textSize="18sp"
            android:visibility="gone" />
        <Button
            android:id="@+id/login"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="30dp"
            android:text="Login"
            android:textColorHighlight="#00C40E0E" 
            android:visibility="gone"/>

    </LinearLayout>
</layout>